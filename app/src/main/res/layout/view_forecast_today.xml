<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forecast"
            type="com.tania.weatherapp.api.dto.ForecastDay" />
    </data>

    <LinearLayout
        android:id="@+id/city_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="showDetails"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weather_title"
            style="@style/TextSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            app:text="@{forecast.conditions}"
            tools:drawableLeft="@drawable/ic_hero_small_fog" />


        <TextView
            android:id="@+id/weather_temp"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0 &#176;"
            android:textSize="85sp"
            app:text="@{forecast.high.celsius}" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/weather_temp_max"
                style="@style/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 &#176;"
                app:text="@{forecast.high.celsius}" />

            <TextView
                android:id="@+id/weather_temp_min"
                style="@style/TextSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0 &#176;"
                app:text="@{forecast.low.celsius}" />

        </LinearLayout>

        <TextView
            android:id="@+id/weather_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="19sp"
            tools:text="Vinnitsa, Ukraine" />

    </LinearLayout>
</layout>